
@model CreateSliderVm




<div class="container">
    <form method="post"  enctype="multipart/form-data">
        <div class="row">
            <div class="mb-3 col-md-3">
                <label  class="form-label">Title</label>
                <input asp-for="Title" class="form-control" i >
                <span asp-validation-for="Title" style="color:red"></span>
             
            </div>
            <div class="mb-3 col-md-3">
                <label  class="form-label">SubTitle</label>
                <input asp-for="SubTitle" class="form-control" >
                <span asp-validation-for="SubTitle" style="color:red"></span>
            </div>  
            <div class="mb-3 col-md-3">
                <label  class="form-label">ImgUrl</label>
                <input asp-for="ImgFile" class="form-control" >
                <span asp-validation-for="ImgFile" style="color:red"></span>
            </div>
           
        </div>
      <div class="row">
            <div class="mb-3">
                <label class="form-label">Description</label>
                <input asp-for="Description" class="form-control">
                <span asp-validation-for="Description" style="color:red"></span>
            </div>
      </div>
       
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>